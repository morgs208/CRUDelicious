@model Dish

<div class="container">
    <div class="text-center row">
        <h2>Edit</h2>  
    </div>
            <form asp-action="Update" asp-controller="Home" asp-route-dishId="@Model.DishId">
                    <div class="row">
                        <div class="col">
                            <label asp-for="ChefName">Chef's Name</label>
                            <input type="text" class="form-control" asp-for="ChefName" >
                            <br>
                            <label asp-for="DishName">Dish Name</label>
                            <input type="text" class="form-control" asp-for="DishName" >
                            <br>
                            <label asp-for="Calories">Calories</label>
                            <input type="text" class="form-control" asp-for="Calories" >
                    </div>
                        <div class="col">
                            <label asp-for="Toastiness">Toastiness</label>
                            <select class="form-control" asp-for="Toastiness">
                            <option selected>Choose...</option>
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
      </select>
                        </div>
                           <div class="col">
                            <label asp-for="Description">Description</label>
                            <textarea class="form-control" rows="3"asp-for="Description"></textarea>
                            <button class="btn btn-success mt-5" type="submit">Save</button>
                            <a class="btn btn-primary mt-5" asp-controller="Home" asp-action="Index">Cancel</a>
                            <a class="btn btn-danger mt-5" asp-action="Delete" asp-controller="Home" asp-route-dishId="@Model.DishId">DELETE</a>
                        </div>
  </div>
</form>
        </div>
       
    </div>
</div>